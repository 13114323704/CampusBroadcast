<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/divider_line_bottom"
    android:padding="5dp">

    <ImageView
        android:id="@+id/channel_label"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:src="@mipmap/channel_label" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/channel_label"
        android:orientation="vertical">

        <TextView
            android:id="@+id/channel_number"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1041"
            android:textColor="#CC000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/channel_person"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="暑期夏令营"
            android:textColor="#00BFFF"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/channel_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00开始"
                android:textColor="@android:color/holo_red_light"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/channel_listening_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="820人在讨论"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>